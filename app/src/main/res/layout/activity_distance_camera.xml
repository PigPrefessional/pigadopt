<?xml version="1.0" encoding="utf-8"?>
<!--定距拍照界面布局-->
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.ai2020lab.aimedia.CameraSurfaceView
		android:id="@+id/take_photo_sv"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

	<!--拍照按钮-->
	<ImageView
		android:id="@+id/take_photo_iv"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:src="@drawable/growth_history_camera_selector"
		tools:ignore="contentDescription"/>

	<!--注意要设置固定宽度，高度，否则屏幕会闪动-->
	<LinearLayout
		android:id="@+id/take_photo_info_ll"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginTop="16dp"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				style="@style/TextNormal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/pig_photo_angle"
				android:textColor="@android:color/white"/>
			<!--显示拍摄角度-->
			<TextView
				android:id="@+id/take_photo_angle_tv"
				style="@style/TextNormal"
				android:layout_width="70dp"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:textColor="@android:color/white"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:orientation="horizontal">
			<TextView
				style="@style/TextNormal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/pig_photo_height"
				android:textColor="@android:color/white"/>
			<!--显示拍摄高度-->
			<TextView
				android:id="@+id/take_photo_height_tv"
				style="@style/TextNormal"
				android:layout_width="70dp"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:textColor="@android:color/white"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:orientation="horizontal">
			<TextView
				style="@style/TextNormal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/pig_photo_distance"
				android:textColor="@android:color/white"/>
			<!--显示拍摄距离-->
			<TextView
				android:id="@+id/take_photo_distance_tv"
				style="@style/TextNormal"
				android:layout_width="70dp"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:textColor="@android:color/white"/>
		</LinearLayout>
	</LinearLayout>

	<!--水平仪-->
	<com.ai2020lab.pigadopted.view.GSensitiveView
		android:id="@+id/take_photo_gsv"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:layout_centerHorizontal="true"
		android:layout_above="@+id/take_photo_iv"
		android:src="@mipmap/gradienter"
		tools:ignore="contentDescription"/>
	
	<SeekBar
		android:id="@+id/take_photo_height_sb"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:maxHeight="1dp"
		android:minHeight="1dp"
		android:rotation="270"
		android:progressDrawable="@drawable/height_seekbar"/>


</RelativeLayout>