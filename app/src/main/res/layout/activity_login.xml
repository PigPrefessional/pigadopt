<?xml version="1.0" encoding="utf-8"?>
<!--登录界面布局-->
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@mipmap/main_bg">

	<!--买家布局-->
	<RelativeLayout
		android:id="@+id/buyer_rl"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="50dp">

		<ImageView
			android:id="@+id/buyer_iv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:background="@mipmap/login_buyer_bg"
			android:visibility="gone"
			tools:ignore="contentDescription"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:orientation="horizontal">
			<!--站位用-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1">

				<RelativeLayout
					android:id="@+id/buyer_info_rl"
					android:layout_width="90dp"
					android:layout_height="wrap_content">

					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/buyer_civ"
						android:layout_width="60dp"
						android:layout_height="60dp"
						android:src="@mipmap/buyer_1"
						android:visibility="gone"/>
					<ImageView
						android:id="@+id/buyer_select_iv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerHorizontal="true"
						android:src="@mipmap/symbol_right"
						android:visibility="gone"
						tools:ignore="contentDescription"/>
					<!--<TextView
						android:id="@+id/buyer_tv"
						style="@style/TextNormal"
						android:layout_width="70dp"
						android:layout_height="wrap_content"
						android:layout_below="@+id/buyer_civ"
						android:layout_marginTop="5dp"
						android:gravity="center"
						android:text="@string/login_buyer_name"
						android:visibility="gone"/>-->
				</RelativeLayout>
			</LinearLayout>

		</LinearLayout>

	</RelativeLayout>

	<!--卖家布局-->
	<RelativeLayout
		android:id="@+id/seller_rl"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/buyer_rl"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="50dp">

		<ImageView
			android:id="@+id/seller_iv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:background="@mipmap/login_seller_bg"
			android:visibility="gone"
			tools:ignore="contentDescription"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:orientation="horizontal">
			<!--站位用-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1">

				<RelativeLayout
					android:id="@+id/seller_info_rl"
					android:layout_width="90dp"
					android:layout_height="wrap_content">

					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/seller_civ"
						android:layout_width="60dp"
						android:layout_height="60dp"
						android:src="@mipmap/seller_1"
						android:visibility="gone"/>
					<ImageView
						android:id="@+id/seller_select_iv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerHorizontal="true"
						android:src="@mipmap/symbol_right"
						android:visibility="gone"
						tools:ignore="contentDescription"/>
					<!--<TextView
						android:id="@+id/seller_tv"
						style="@style/TextNormal"
						android:layout_width="70dp"
						android:layout_height="wrap_content"
						android:layout_below="@+id/seller_civ"
						android:layout_marginTop="5dp"
						android:gravity="center"
						android:text="@string/login_seller_name"
						android:visibility="gone"/>-->
				</RelativeLayout>

			</LinearLayout>

		</LinearLayout>

	</RelativeLayout>

	<android.support.design.widget.CoordinatorLayout
		android:id="@+id/snack_container_cl"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

</RelativeLayout>