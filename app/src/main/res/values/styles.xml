<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#b59378</item>
    </style>

    <style name="LabelContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8e5339</item>
    </style>

    <style name="LabelLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="ChartsButton">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">@drawable/pig_detail_charts_button_selector</item>
    </style>

    <!--大号字体-->
    <style name="TextLarge" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_normal</item>
    </style>
    <!--中号字体-->
    <style name="TextNormal" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/text_normal</item>
    </style>
    <!--中号字体-->
    <style name="TextNormal.Light" parent="TextNormal">
        <item name="android:textColor">@color/text_light</item>
    </style>
    <!--小号字体-->
    <style name="TextLittle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/text_normal</item>
    </style>
    <!--小号字体-->
    <style name="TextLittle.Light" parent="TextLittle">
        <item name="android:textColor">@color/text_light</item>
    </style>

</resources>
